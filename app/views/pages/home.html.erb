<div class="home-banner" style="background-image:linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.2)), url(https://cdn.dribbble.com/users/1426840/screenshots/12019984/media/e57f7d19d88e91f22f9944f86804e20e.png);">

    <div class="discover-recipes-card">
      <div class="discover-recipes-content">
        <h1>"Parce que <strong class="pink-text">Sans Gluten</strong>
        <br> rime aussi avec <strong class="pink-text">Gourmandise</strong> !"
        </h1>
      </div>
    </div>

    <div>
      <%= link_to "Découvrez nos recettes", recipes_path, class: "pink-button"%>
    </div>

</div>


  <!-- pictures -->

<div class="container-fluid" style="position:relative;">
  <div class="row">
    <div class="col">
      <h2 class="index-title">Profitez du confinement pour cuisiner!!!</h2>

    <div class="cards-grid">
      <% @recipes.first(3).each do |recipe| %>
        <%= link_to recipe_path(recipe) do %>
          <% if recipe.photo.attached?%>
            <div class ="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path recipe.photo.key %>')">
          <% else %>
            <div class ="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1515192088926-be05d2dded88?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1652&q=80')">
          <% end %>
              <h2 class="card-title"><%= recipe.name.capitalize %> </h2>
              <div class="diet-icon-container">
                <% if recipe.dairyfree %>
                  <%= image_tag("dairyfree.png", :class => " diet-icon-index")%>
                <% else %>
                <% end %>
                <% if recipe.eggfree %>
                  <%= image_tag("eggfree.png", :class => " diet-icon-index")%>
                <% else %>
                <% end %>
                <% if recipe.vegan %>
                  <%= image_tag("vegan.png", :class => " diet-icon-index")%>
                <% else %>
                <% end %>
              </div>
            </div>
        <% end %>
      <% end %>
    </div>

    </div>
  </div>
  <div>
    <div class="col d-flex justify-content-center mt-4 mb-4">
      <%= link_to "Pour découvrir encore plus de recettes, c'est par ici!", recipes_path, class:"small-pink-button" %>
    </div>
  </div>
</div>



