<div class="bg-white p-3 my-3" id="about-me">
  <div class="d-flex justify-content-between align-items-baseline">
    <h2 class="mb-3">Mon profil</h2>
    <% unless current_page?(edit_user_url) %>
      <span class="pink-btn-edit" class="btn "><%= link_to "Editer mon profil", edit_user_url %></span>
    <% end %>
  </div>
  <% if current_page?(edit_user_url) %>
    <%= simple_form_for(@user) do |f| %>
      <div class="mb-3">
        <span class="pink-badge">Email</span> <span class="text-muted"><%= @user.email %></span>
      </div>
      <%= f.input :username, label:"Nom utilisateur" %>
      <%= f.input :first_name, label:"Prénom" %>
      <%= f.input :last_name, label:"Nom" %>
      <%= f.button :submit, "Mettre à jour mon profil", class: 'pink-btn-edit' %>
    <% end %>
  <% else %>
    <div>
      <ul class="list-unstyled">
        <li class="d-flex align-items-center"><i class="fas fa-user icon-user-profile"></i><%= @user.username %></li>
        <li class="d-flex align-items-center"><i class="far fa-envelope icon-user-profile"></i><%= @user.email %></li>
        <li class="d-flex align-items-center"><i class="far fa-id-badge icon-user-profile"></i><%= "#{@user.first_name} #{@user.last_name}" %></li>
      </ul>
    </div>
  <% end %>
</div>
