<div class="container-recipe">
  <div>
    <div class="recipe-title-container" >
      <div class="recipe-title">
        <%= @recipe.name.capitalize %>
      </div>
      <div class="edit-delete">
        <%= link_to edit_recipe_path(@recipe) do%>
          <i id="show-icon" class="fas fa-edit"></i>
        <% end %>
        <%= link_to recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i id="show-icon" class="fa fa-trash destroy_dose"></i>
        <% end %>
      </div>
    </div>

    <div class="recipe-grid">
      <div>
        <% if @recipe.photo.attached? %>
        <%= cl_image_tag @recipe.photo.key, height: 380, crop: :fill, class:"recipe-image-show" %>
      <% end %>
      </div>
      <div>
        <h3>Ingrédients</h3>
        <div class="content-title-underline">
        </div>
        <% @recipe.doses.each do |dose| %>
          <ul>
            <li><%= dose.ingredient.name %> : <%= dose.description %>
            </li>
          </ul>
        <% end %>

        <div>
          <%= link_to new_recipe_dose_path(@recipe) do %>
        <span class="add-recipe"><i class="fas fa-plus mr-1"></i> Ajouter un ingrédient à la recette</span>
        <% end %>
        </div>

      </div>
    </div>



  </div>


  <div class="preparation">
    <h3>Préparation</h3>
    <div class="content-title-underline">
    </div>
    <p><%= @recipe.description %></p>
  </div>

  <div>
    <h3 >Qu'en avez vous pensé?</h3>
    <div class="content-title-underline">
    </div>
  </div>
  </div>

</div>

